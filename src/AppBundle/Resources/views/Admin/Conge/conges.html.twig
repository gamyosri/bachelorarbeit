{# cette pages pour les employes#}

{% extends '::admin.html.twig' %}

{% block title %} {{ parent() }} - Mon compte {% endblock %}

    {% block page_header %}
        <div class="col-sm-8">
            <h1 class="mainTitle">Mon compte</h1>
        </div>
    {% endblock %}
{% block body %}

    <div class="col-md-12">
        <div class="tabbable">
            <ul class="nav nav-tabs tab-padding tab-space-3 tab-blue" id="myTab4">
                <li class="active">
                    <a data-toggle="tab" href="#c1">
                        Mes conges
                    </a>
                </li>
                <li>
                    <a data-toggle="tab" href="#c2">
                        Demandes de remplacement recus
                    </a>
                </li>
                <li>
                    <a data-toggle="tab" href="#c3">
                        Demander un conge
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div id="c1" class="tab-pane fade in active">
                    {{ render(controller("AppBundle:Conge:mesConges")) }}
                </div>
                <div id="c2" class="tab-pane fade">
                    {{ render(controller("AppBundle:Conge:mesDemandesRemplacement")) }}
                </div>
                <div id="c3" class="tab-pane fade">
                    {{ render(controller("AppBundle:Conge:formDemande")) }}
                </div>

            </div>
        </div>
    </div>

{% endblock %}