{# cette pages pour les employes#}

{% extends '::admin.html.twig' %}

{% block title %} {{ parent() }} - Mon compte {% endblock %}

    {% block page_header %}
        <div class="col-sm-8">
            <h1 class="mainTitle">Modifer conge</h1>
        </div>
    {% endblock %}
{% block body %}

    <div class="col-md-12">
        <div class="tabbable">
            <ul class="nav nav-tabs tab-padding tab-space-3 tab-blue" id="myTab4">
                <li class="active">
                    <a data-toggle="tab" href="#c1">
                        Modifier conge
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div id="c1" class="tab-pane fade in active">
                    <div id="panel_edit_account" class="tab-pane fade in active">
                        <form action="" method="post" role="form" id="form"
                              onsubmit="return checkform()">


                            <fieldset>
                                <legend>
                                    Modifier un conge
                                </legend>
                                <div class="row">
                                    <div class="col-md-6">
                                        <figure style="width: 70px; margin: auto; display: none" class="loading">
                                            <img src="{{ asset('images/ajax_loader.gif') }}"
                                                 style="margin: 0 auto"
                                                 width="70" height=""/>
                                            <figcaption style="font-size: 16px;">VÃ©rification</figcaption>
                                            <br>
                                        </figure>

                                        <div id="verification">

                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">
                                                Type de conge
                                            </label>
                                            {{ form_widget(form.typeConge) }}
                                            {{ form_errors(form.typeConge) }}
                                        </div>

                                        <div>
                                            <div class="form-group">
                                                <label class="control-label" style="display: block">
                                                    Nombre des jours
                                                </label>
                                                {{ form_widget(form.nbJours) }}
                                                {{ form_errors(form.nbJours) }}
                                            </div>
                                            <br><br>
                                            <div class="form-group">
                                                <label class="control-label">
                                                    Date debut
                                                </label>
                                                {{ form_widget(form.dateDebut) }}
                                                {{ form_errors(form.dateDebut) }}
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">
                                                    Date fin
                                                </label>
                                                {{ form_widget(form.dateFin) }}
                                                {{ form_errors(form.dateFin) }}
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">
                                                    Remplacement par
                                                </label>
                                                {{ form_widget(form.remplaceur) }}
                                                {{ form_errors(form.remplaceur) }}
                                            </div>

                                            {{ form_rest(form) }}

                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <button class="btn btn-primary pull-left demande" type="submit">
                                                        Modifier <i class="fa fa-arrow-circle-right"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                            </fieldset>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>


{% endblock %}